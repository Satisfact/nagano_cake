<div class="container">
    <div class="row">
        <h2 class="col-md-3 col-md-offset-1"><span class="label label-default">　　ショッピングカート　　</span></h2>
        <div class="col-md-offset-5 col-md-2 ">
            <div class="text-right"><%= link_to "カートを空にする", cart_delete_path, method: :delete, class: "btn btn-danger" %></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <table class="table table-bordered">


                <thead>
                    <tr class="active">
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% sum = 0 %>
                    <% @cart_items.each do |cart_item| %>
                        <tr>
                            <th><%= attachment_image_tag cart_item.item, :image, size: "40x40", fallback: "no_image.jpg" %> <%= cart_item.item.name %></th>
                            <td><%= (cart_item.item.price * 1.1).round.to_s(:delimited) %></td>
                            <%= form_with model: cart_item, local:true do |f| %>
                                <td><%= f.number_field :amount, min:1, max: 10 %> <%= f.submit "変更", class: "btn btn-primary btn-sm"%></td>
                            <% end %>
                            <td><%= number_with_delimiter(money = (cart_item.item.price * cart_item.amount * 1.1).round) %></td>
                            <% sum = sum + money %>
                            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
                        </tr>
                    <% end %>
                </tbody>

            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-sm-offset-1">
            <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
        </div>
        <div class="col-sm-3 col-sm-offset-5">
            <table class="table table-bordered">
                    <tr>
                        <th class="active">合計金額</th>
                        <td><%= sum.to_s(:delimited) %></td>
                    </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="flex">
            <%= link_to "  情報入力に進む  ",new_order_path, class: "btn btn-success btn-lg text-center" %>
    </div>
    <%= image_tag('cart.jpg', class: "img-circle pull-right", style: "width: 300px; height: 250px;") %>
</div>
