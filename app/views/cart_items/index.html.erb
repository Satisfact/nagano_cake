<div class="container">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 ">
            <p><h1>ショッピングカート</h1></p>
            <p class="text-right"><%= link_to "カートを空にする", cart_delete_path, method: :delete, class: "btn btn-danger" %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
            <table class="table table-bordered">
                
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% sum = 0 %>
                    <% @cart_items.each do |cart_item| %>
                        <tr>
                            <th><%= attachment_image_tag cart_item.item, :image, size: "40x40", fallback: "no_image.jpg" %> <%= cart_item.item.name %></th>
                            <td><%= (cart_item.item.price * 1.1).round %></td>
                            <%= form_with model: cart_item, local:true do |f| %>
                                <td><%= f.number_field :amount, min:1, max: 10 %> <%= f.submit "変更", class: "btn btn-primary btn-sm"%></td>
                            <% end %>
                            <td><%= money = (cart_item.item.price * cart_item.amount * 1.1).round %></td>
                            <% sum = sum + money %>
                            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
                        </tr>
                    <% end %>
                </tbody>
                
            </table>
            <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
            <div class="col-xs-3">
                <table class="table table-bordered">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <th>合計金額</th>
                            <th><%= sum %></th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="">
                <!--%= link_to "情報入力に進む", new_item_order_path(?), class: "btn btn-success btn-lg" %>-->
            </div>
        </div>
    </div>
</div>