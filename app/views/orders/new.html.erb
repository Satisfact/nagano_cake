<div class="container">
  <div class="row">
    <h2 class="col-md-3 col-md-offset-1"><span class="label label-default">　　注文情報入力　　</span></h2>
  </div>
  <%= form_with(model: @order, local: true, url:orders_confirm_path, method: :post) do |f| %>
  <div class="row">
    <h4 class="col-md-10">支払方法</h4>
    <div class="radio col-md-8  col-xs-offset-1">
      <label>
        <%= f.radio_button :pay, 0, checked: "checked" %>クレジットカード
      </label>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :pay, 1 %>銀行振込
      </label>
    </div>
  </div>
  
  <div class="row">
    <h4 class="col-md-10">お届け先</h4>
    <div class="radio col-md-8  col-xs-offset-1">
      <label>
        <%= f.radio_button :address, 0, checked: "checked" %>ご自身の住所
      </label>
      <p><%= @customer.postal_code %>  <%= @customer.address %><br><%= @customer.name %></p>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :address, 1 %>登録済住所から選択
      </label>
      <%= f.collection_select(:address, address.all, :id, :address_all) %>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :address, 2 %>新しいお届け先
      </label>
       <div class="form-horizontal">
        <div class="form-group">
          <%= f.label :"郵便番号(ハイフンなし)" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :"住所" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :"宛名" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
      </form>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-3 col-md-offset-4">
      <%= f.submit "確認画面へ進む", class:"btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <% end %>
</div>