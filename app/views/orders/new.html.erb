<div class="container">
  <div class="row">
    <h2 class="col-md-3 col-md-offset-1"><span class="label label-default"> 注文情報入力 </span></h2>
  </div>
  <%= form_with(model: @order, local: true, url:order_confirm_path, method: :post) do |f| %>
  <div class="row">
    <h4 class="col-md-10">支払方法</h4>
    <div class="radio col-md-8  col-xs-offset-1">
      <label>
        <%= f.radio_button :pay, :クレジットカード, checked: "checked" %>クレジットカード
      </label>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :pay, :銀行振込 %>銀行振込
      </label>
    </div>
  </div>

  <div class="row">
    <h4 class="col-md-10">お届け先</h4>
    <div class="radio col-md-8  col-xs-offset-1">
      <label>
        <%= f.radio_button :send_address, 0, checked: "checked" %>ご自身の住所
      </label>
      <p><%= current_customer.postal_code %> <%= current_customer.address %><br><%= current_customer.last_name %>  <%= current_customer.first_name %></p>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :send_address, 1 %>登録済住所から選択
      </label>
      <!--f.collection_select(:モデル名, current_customer.addresses, :id, :カラム名, :include_blank => "選択してください")-->
      <%= f.collection_select(:sending_address, current_customer.addresses, :id, :full_address, :include_blank => "選択してください") %>
    </div>
    <div class="radio col-md-8 col-xs-offset-1">
      <label>
        <%= f.radio_button :send_address, 2 %>新しいお届け先
      </label>
       <div class="form-horizontal">
        <div class="form-group">
          <%= f.label :postcode, "郵便番号(ハイフンなし)" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name,"宛名" ,class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-4">
      <%= f.submit "確認画面へ進む", class:"btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <% end %>
</div>