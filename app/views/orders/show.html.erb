<div class="container">
  <div class="row">
    <h2 class="index col-md-3 col-md-offset-1"><span class="label label-default">　　注文履歴一覧　　</span></h2>
  </div>
  <div class="row  row-no-gutters">
    <h4 class="col-md-3">注文情報</h4>
    <h4 class="col-md-3  col-md-offset-4">請求情報</h4>
    <div class="col-md-7">
      <table class="table table-bordered">
        <tr class="active">
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postcode %></br>
            <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.pay %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-5">
      <table class="table table-bordered">
        <tr class="active">
          <th>商品合計</th>
          <td>￥<%= number_with_delimiter(@order.bill) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>￥<%= number_with_delimiter(@order.send_cost) %></td>
        </tr>
        <tr>
          <th><strong>ご請求額</strong></th>
          <td>￥<%= number_with_delimiter(@order.bill + @order.send_cost) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h4 class="under">注文内容</h4>
    <div class="col-md-7">
      <table class="table table-bordered">
        <tr class="active">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @about_order.each do |about_order| %>
        <tr>
          <td>￥<%= about_order.item.name %></td>
          <td><%= number_with_delimiter(about_order.price) %></td>
          <td><%= about_order.amount %></td>
          <td><%= number_with_delimiter(about_order.price * about_order.amount) %></td>
        </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>