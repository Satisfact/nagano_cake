<div class="container">
  <div class="row">
    <h2 class="index col-md-3 col-md-offset-1"><span class="label label-default">　　注文履歴一覧　　</span></h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tr class="active">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <tr>
        <% @orders.each do |order| %>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td><%= order.item %></td>
        <td>¥<%= order.price %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", item_order_path(order), class:"btn btn-primary btn-sm" %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>