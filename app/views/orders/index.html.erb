<div class="container">
  <div class="row">
    <h2 class="index col-md-3 col-md-offset-1"><span class="label label-default">　　注文履歴一覧　　</span></h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tr class="active">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th> 
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <!--注文を呼び出している-->
          <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= order.address %></td>
          <td>
            <!--注文明細をeachで呼び出している-->
            <% order.about_orders.each do |about_order| %>
              <p><%= about_order.item.name %></p>
            <% end %>
          </td>
          <td>¥<%= number_with_delimiter(order.bill) %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", order_path(order), class:"btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>