<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前
      <%= f.label :last_name, "（姓）" %>
      <%= f.text_field :last_name %>
      <%= f.label :first_name, "（名）" %>
      <%= f.text_field :first_name %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :last_kana, "（セイ）" %>
      <%= f.text_field :last_kana %>
      <%= f.label :first_kana, "（メイ）" %>
      <%= f.text_field :first_kana %>
    </p>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :tell, "電話番号" %>
    <%= f.text_field :tell %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= render "customers/shared/links" %>からログインしてください。</p>
