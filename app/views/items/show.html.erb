<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, genres_path(genre.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-7">
          <%= attachment_image_tag @sweet_item, :image, size: "300x300", fallback: "no-image.jpg" %>
        </div>
        <div class="col-xs-5">
          <h3><%= @sweet_item.name %></h3>
		      <p><%= @sweet_item.introduction%></p>
		      <h4><%= (@product.price * 1.1).round %>円 (税込み)</h4>
        </div>
        <%= form_for @cart_item, url: cart_items_path(@cart_item) do |f| %>
        <%= f.hidden_field :item_id, :value => @sweet_item.id %>
        <%= f.number_field :number_of_items, placeholder: "個数選択", min:1, max: 10 %>
        <%= f.submit "カートに入れる", class: 'btn btn-primary'
      </div>
    </div>
  </div>
</div>