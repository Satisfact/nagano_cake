<div class="container">
  <div class="row">
    <!--ジャンル一覧パーシャル-->
    <%= render 'items/genrebox', genres: @genres %>

    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-7">
          <%= attachment_image_tag @sweet_item, :image, size: "300x300", fallback: "no_image.jpg" %>
        </div>
        <div class="col-xs-5">
          <h3><%= @sweet_item.name %></h3>
		      <p><%= @sweet_item.introduction%></p>
		      <h4><%= (@sweet_item.price * 1.1).round %>円 (税込み)</h4>
        </div>
        <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
          <%= f.hidden_field :item_id, :value => @sweet_item.id %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.number_field :amount, placeholder: "個数選択", min:1, max: 10 %>
          <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
