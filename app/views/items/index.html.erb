<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, genres_path(genre.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-xs-9">
      <h3>商品一覧<span>(全<%= @quantity %>件)</span></h3>
      <div class="row">
        <% @sweet_items.each do |item| %>
          <div class="col-3"><!--floatleft?-->
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, size: "200x200", fallback: "no-image.jpg" %>
            <% end %>
            <p><%= item.name %></p>
            <p>¥<%= item.price %></p>
          </div>
        <% end %>
      </div>
      <!--ページネーションつける-->
    </div>
  </div>
</div>