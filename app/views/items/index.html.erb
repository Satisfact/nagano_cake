<div class="container">
  <div class="row">
    <!--ジャンル一覧パーシャル-->
    <%= render 'items/genrebox', genres: @genres %>

    <div class="col-xs-9">
      <h3><%= @title %>一覧<span>(全<%= @items.count %>件)</span></h3>
      <% if @search_items.any? %>
        <div class="row">
          <% @sweet_items.each do |item| %>
            <div class="col-md-3">
              <%= link_to item_path(item.id) do %>
                 <%= attachment_image_tag item, :image, size: "200x200", fallback: "no_image.jpg" %>
              <% end %>
              <p><%= item.name %></p>
              <p>¥<%= item.price.to_s(:delimited) %></p>
            </div>
          <% end %>
          <div class="col-md-10">
            <nav aria-label="...">
              <ul class="pager">
            <%= paginate @sweet_items %>
              </ul>
            </nav>
          </div>
      <% else %>
          <h1>キーワードを含む商品を検索できませんでした</h1>
        </div>
      <% end %>
    </div>
  </div>
</div>

