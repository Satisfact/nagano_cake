
<div class="container">

  <h2><%= @customer.last_name %><%= @customer.first_name %>さん会員情報編集</h2>

    <%= form_with model:@customer, url:admins_customer_path(@customer), local:true do |f| %>
      <div class="row user_edit">
      
      <div class="col-xs-2">
        <%= f.label :"会員ID" %>
      </div>
      <div class="col-xs-1"></div>
      <div class="col-xs-2">
        <%= @customer.id %>
      </div>
    </div>
    <div class="row user_edit">
      <div class="col-xs-2">
        <%= f.label :"名前" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :"（姓）" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-xs-1">
        <%= f.label :"（名）" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :first_name %>
      </div>
    </div>
    
    <div class="row user_edit">
      <div class="col-xs-2">
        <%= f.label :"フリガナ" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :"（セイ）" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :last_kana %>
      </div>
      <div class="col-xs-1">
        <%= f.label :"（メイ）" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :first_kana %>
      </div>
    </div>
    
    <div class="row user_edit">
      <div class="col-xs-3">
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-xs-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "post_code" %>
      </div>
    </div>
    
    <div class="row user_edit">
      <div class="col-xs-3">
        <%= f.label :住所 %>
      </div>
      <div class="col-xs-5">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "50"%>
      </div>
    </div>
    
    <div class="row user_edit">
      <div class="col-xs-3">
        <%= f.label :"電話番号" %>
      </div>
      <div class="col-xs-3">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    
    <div class="row user_edit">
        <div class="col-xs-3">
            <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-xs-3">
            <%= f.email_field :email %>
        </div>
    </div>
    <div class="row user_edit">
      <div class="col-xs-2">
        <%= f.label :"会員ステータス" %>
      </div>
      <div class="col-xs-1">
      </div>
      <div class="col-xs-2">
        <%= f.radio_button :is_deleted, true, checked: true %> 有効 <%= f.radio_button :is_deleted, false %> 退会済み
      </div>
    </div>
  
    <div class="row user_edit">
      <div class="col-xs-3">
        <%= f.submit "変更を保存する" ,class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>
