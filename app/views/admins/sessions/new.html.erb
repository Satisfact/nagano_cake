<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-horizontal center-block">
  <div class="field form-group">
    <%= f.label "メールアドレス", class:"col-sm-2 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-8" %>
  </div>
  <div class="field　form-group">
    <%= f.label "パスワード", class:"col-sm-2 control-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"col-sm-8" %>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "ログイン", class:"btn btn-default btn-primary center-block col-sm-offset-2 col-sm-8" %>
    </div>
  </div>
  
</div>
<% end %>

