<div class="container">
  <div class="sign-in">
    <div class="row">
      <h2 class="col-md-3 col-md-offset-1 sign"><span class="label label-default">　管理者ログイン　</span></h2>
    </div>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-horizontal">
          <div class="form-group">
            <%= f.label "メールアドレス" ,class:"col-sm-2 col-sm-offset-2 control-label" %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "パスワード", class:"col-sm-2 col-sm-offset-2 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
          <div class="actions">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "ログイン", class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
