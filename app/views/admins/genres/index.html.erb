<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <p>
  <%= form_with model:@genre, url:admins_genres_path, local:true do |f| %>
  <%= render 'layouts/errors', model: @genre %>
  <%= f.label :name, "ジャンル" %>
  <%= f.text_field :name %>
  <label>
    <%= f.radio_button :is_active, true %>
    有効
  </label>
  <label>
    <%= f.radio_button :is_active, false %>
    無効
　</label>
  <%= f.submit '追加', class: 'btn btn-info' %>
  <% end %>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <% if genre.is_active == true %>
        <td>有効</td>
        <% else %>
        <td>無効</td>
        <% end %>
        <td><%= link_to '編集する', edit_admins_genre_path(genre.id), class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>