<body>
  <h1>ジャンル編集</h1>
  <%= form_with model:@genre, url:admins_genre_path(@genre.id), local:true do |f| %>
  <%= render 'layouts/errors', model: @genre %>
  <%= f.label :ジャンル %>
  <%= f.text_field :name %>
  <label>
    <%= f.radio_button :is_active, true %>
    有効
  </label>
  <label>
    <%= f.radio_button :is_active, false %>
    無効
　</label>
  <%= f.submit '変更を保存する', class: 'btn btn-info' %>
  <% end %>

  <%= link_to '戻る', admins_genres_path %>
</body>