<div class="container">
  <div class="row">
    <h2 class="index col-md-3 col-md-offset-1"><span class="label label-default">　　注文履歴一覧　　</span></h2>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table table-hover">
        <thead>
          <tr class="active">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admins_order_path(order) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
              <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.about_orders.all.sum(:amount) %></td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
<table>
      <tr>
        <th>購入者</th>
        <td>@order.名前</td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>@order.住所</td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td>@order.銀行</td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>@order.入金</td>
      </tr>
    </table>