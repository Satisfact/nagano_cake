<div class="container">
  <div class="row">
    <h2 class="index col-md-3 col-md-offset-1"><span class="label label-default">注文履歴詳細</span></h2>
  </div>
  <div class="row">
    <div>
    <table>
      <tr>
        <th>購入者</th>
        <td>
          <%= @order.customer.last_name %>
          <%= @order.customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.postcode %><%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.pay %></td>
      </tr>
      <%= form_with model:@order, url:admins_order_path, local:true do |f| %>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= f.select :order_status, Order.order_statuses.keys, :selected => @order.order_status %>
          <%= f.submit '更新' %>
        </td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-9">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.about_orders.each do |about_order| %>
        <tr>
          <td><%= about_order.item.name %></td>
          <td><%= number_with_delimiter(about_order.price) %></td>
          <td><%= about_order.amount %></td>
          <td><%= number_with_delimiter(@order.bill) %></td>
          <td>
            <%= form_with model: about_order, url: admins_about_order_path, local:true do |f| %>
              <%= f.select :making_status, AboutOrder.making_statuses.keys, :selected => about_order.making_status%>
              <%= f.submit '更新' %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-xs-offset-1 col-xs-2">
      <p><strong>商品合計</strong></p><p><%= number_with_delimiter(@order.about_orders.all.sum(:price)) %></p>
      <p><strong>送料</strong></p><p><%= @order.send_cost %></p></p>
      <p><strong>請求金額合計</strong></p><p><strong><%= number_with_delimiter(@order.about_orders.all.sum(:price) + @order.send_cost) %></strong></p>
    </div>
  </div>