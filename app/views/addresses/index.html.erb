<body>
  <h1>配送登録/一覧</h1>
  <%= form_with model:@address, url:addresses_path, local:true do |f| %>
  <%= render 'layouts/errors', model: @address %>
  <p><%= f.label :郵便番号（ハイフンなし） %>
  <%= f.text_field :postcode %></p>
  <p><%= f.label :住所 %>
  <%= f.text_field :address %></p>
  <p><%= f.label :宛名 %>
  <%= f.text_field :name %>
  <%= f.submit '登録する', class: 'btn btn-success' %></p>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-primary' %></td>
        <td><%= link_to '削除する', address_path(address.id), class: 'btn btn-danger', method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>