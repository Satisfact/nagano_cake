<div class="container">
  <div class="row">
    <h1 class="col-md-3 col-md-offset-1"><span class="label label-default">配送登録/一覧</span></h1>
  </div>
  <div class="row">
    <%= form_with model:@address, url:addresses_path, local:true do |f| %>
    <%= render 'layouts/errors', model: @address %>
    <div class="sukima row form-inline">
      <%= f.label :postcode, "郵便番号（ハイフンなし）", class:"col-sm-4 control-label" %>
      <%= f.text_field :postcode %>
    </div>
    <div class="sukima row form-inline">
      <%= f.label :address, "住所", class:"col-sm-4 control-label" %>
      <%= f.text_field :address, :size => "50" %>
    </div>
    <div class="sukima row form-inline">
      <%= f.label :name, "宛名", class:"col-sm-4 control-label" %>
      <%= f.text_field :name %>
      <div class="pull-right">
        <%= f.submit '登録する', class: 'btn btn-success' %>
      </div>
    </div>
    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postcode %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-primary' %></td>
          <td><%= link_to '削除する', address_path(address.id), class: 'btn btn-danger', method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>