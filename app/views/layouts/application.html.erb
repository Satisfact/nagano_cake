<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <style>
      .link{
        margin-top:25px;
      }
      li{
        margin-right:25px;
      }
      .logo{
        padding-left:20px;
        font-size:30px;
      }
    </style>
    <header class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <%= image_tag('dog.png', class: "img-circle pull-left profile-img", style: "width: 100px; height: 100px;") %>
          <span class="logo"><%= link_to "ながのcake", root_path, class:"label label-danger" %></span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right link">
            <% if customer_signed_in? %>
            <!--変数部分を変える。ルートも要確認-->
              <li>ようこそ<%= link_to @customer,customer_path %> </li>
              <li><a class="btn btn-default" href="#" role="button">マイページ</a></li>
              <li><%= link_to "商品一覧", items_path, class:"btn btn-default btn-sm" %></li>
              <li><a class="btn btn-default" href="#" role="button">カート</a></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-default btn-sm" %></li>
            <% elsif admin_signed_in? %>
              <li><a class="btn btn-default" href="#" role="button">商品一覧</a></li>
              <li><a class="btn btn-default" href="#" role="button">会員一覧</a></li>
              <li><a class="btn btn-default" href="#" role="button">注文履歴一覧</a></li>
              <li><a class="btn btn-default" href="#" role="button">ジャンル</a></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "about", homes_about_path, class:"btn btn-default btn-sm" %></li>
              <li><%= link_to "商品一覧", items_path, class:"btn btn-default btn-sm" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class:"btn btn-default btn-sm" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class:"btn btn-default btn-sm" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
